{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "modlib": ["./code/modlib"]
    }
  },
  "include": [
    "./mods/**/*",
    "./code/mod/index.d.ts",
    "./code/modlib/**/*",
    "mods/Testing/ui/**/*",
    "./dist/dist.ts",
    "./global.d.ts"
  ]
}
